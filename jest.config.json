{
    "testEnvironment": "node",
    "testMatch": [
    "**/__tests__/**/*.js",
    "**/?(*.)+(spec|test).js"
    ],
    "moduleFileExtensions": [
    "js",
    "json"
    ],
    "coverageThreshold": {
    "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
    }
    },
    "collectCoverageFrom": [
    "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
    "text",
    "html"
    ],
    "verbose": true
}